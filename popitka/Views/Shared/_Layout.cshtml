<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Alış-Veriş</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Site.css")">
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    @Html.Partial("~/Views/Shared/LayoutHeader.cshtml")  @* Подключаем Header *@

    <div class="container body-content">
        @RenderBody()
    </div>

    @Html.Partial("~/Views/Shared/LayoutFooter.cshtml")  @* Подключаем Footer *@

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)  @* Секция для скриптов страниц *@

</body>
</html>
