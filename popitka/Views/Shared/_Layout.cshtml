<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Alış-Veriş</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/base.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/login.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/register.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/product.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/buttons.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/header.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/utilities.css")" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    @Html.Partial("~/Views/Shared/LayoutHeader.cshtml")  @* Подключаем Header *@

    <div class="container body-content">
        @RenderBody()
    </div>

    @Html.Partial("~/Views/Shared/LayoutFooter.cshtml")  @* Подключаем Footer *@

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)  @* Секция для скриптов страниц *@

</body>
</html>
